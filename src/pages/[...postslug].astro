---
// @ts-ignore
import { getCollection } from "astro:content";
// @ts-ignore
import { AstroFont } from "astro-font"; 
// @ts-ignore
import { SEO } from "astro-seo"; 
// @ts-ignore
import { schema } from "astro-seo-schema"; 
// @ts-ignore
import { Image } from "astro:assets";
import { config } from "@config/config";
import { theme } from "@config/theme";
import { getPosts } from "@utils/content"; // This function needs to be defined or imported.
import { getAllAuthors } from "@utils/get-all-authors"; 
import { getPostsByCategory } from "@utils/content"; // This function needs to be defined or imported.
// ... other imports ...

const posts = await getPosts();
const authors = await getAllAuthors();
const { params } = Astro.params;
const post = posts.find((post) => post.slug === params.postslug);
const prevPost = posts.find((post) => post.slug === params.postslug);
const nextPost = posts.find((post) => post.slug === params.postslug);
const author = authors.find((author) => author.slug === post?.author);
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{post.title}</title>
    <meta name="description" content={post.excerpt} />
    <meta property="og:title" content={post.title} />
    <meta property="og:description" content={post.excerpt} />
    <meta property="og:image" content={post.heroImage} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:type" content="article" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={post.title} />
    <meta name="twitter:description" content={post.excerpt} />
    <meta name="twitter:image" content={post.heroImage} />
    <meta name="twitter:url" content={Astro.url} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </head>
  <body class="bg-gray-100 dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row">
        <div class="w-full md:w-1/4">
          <AuthorCard author={author} />
        </div>
        <div class="w-full md:w-3/4">
          <PostContent post={post} />
          <Socialshare post={post} />
          <Pagination prevPost={prevPost} nextPost={nextPost} />
        </div>
      </div>
    </div>
  </body>
</html>

